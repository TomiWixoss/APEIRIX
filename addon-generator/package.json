{
  "name": "apeirix-addon-generator",
  "version": "1.0.0",
  "description": "CLI tool để tự động sinh file JSON cho APEIRIX addon",
  "author": "TomiSakae",
  "type": "module",
  "bin": {
    "apeirix": "./dist/index.js"
  },
  "scripts": {
    "dev": "bun run src/index.ts",
    "compile": "bun run src/index.ts compile",
    "compile:clean": "bun run src/index.ts compile --clean",
    "validate": "bun run src/index.ts validate",
    "init": "bun run src/index.ts init",
    "build": "bun build src/index.ts --outdir dist --target node",
    "start": "node dist/index.js",
    "test": "node --test tests/*.test.js"
  },
  "dependencies": {
    "commander": "^12.0.0",
    "chalk": "^5.3.0",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.0"
  }
}
